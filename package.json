{
  "name": "@dash-ui/responsive",
  "version": "0.2.3",
  "description": "A library for adding responsive style props to components with @dash-ui",
  "keywords": [
    "responsive prop",
    "dash",
    "dash ui",
    "dash responsive props",
    "dash media query props",
    "media query props"
  ],
  "homepage": "https://github.com/dash-ui/responsive#readme",
  "bugs": "https://github.com/dash-ui/responsive/issues",
  "repository": "github:dash-ui/responsive",
  "license": "MIT",
  "author": "Jared Lunde <jared.lunde@gmail.com> (https://jaredlunde.com/)",
  "sideEffects": false,
  "exports": {
    ".": {
      "browser": "./dist/module/index.js",
      "import": "./dist/esm/index.mjs",
      "require": "./dist/main/index.js",
      "umd": "./dist/umd/responsive.js",
      "source": "./src/index.ts",
      "types": "./types/index.d.ts",
      "default": "./dist/main/index.js"
    },
    "./package.json": "./package.json",
    "./": "./"
  },
  "main": "dist/main/index.js",
  "unpkg": "dist/umd/responsive.js",
  "module": "dist/module/index.js",
  "source": "src/index.ts",
  "types": "types/index.d.ts",
  "files": [
    "/dist",
    "/src",
    "/types"
  ],
  "scripts": {
    "bench": "lundle build -f module -e . && NODE_ENV=production babel-node ./benchmark -x .ts,.js",
    "build": "lundle build",
    "check-types": "lundle check-types",
    "dev": "lundle build -f module,cjs -w",
    "format": "prettier --write \"{,!(node_modules|dist|coverage)/**/}*.{ts,js,md,yml,json}\"",
    "lint": "eslint . --ext .ts",
    "prepare": "husky install",
    "test": "jest",
    "validate": "lundle check-types && pnpm run lint && jest --coverage"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "**/*.{ts,js}": [
      "eslint --ext .ts,.js --fix",
      "prettier --write"
    ],
    "**/*.{md,yml,json}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "eslintConfig": {
    "extends": [
      "lunde"
    ]
  },
  "eslintIgnore": [
    "node_modules",
    "coverage",
    "dist",
    "/types",
    "test",
    "*.config.js"
  ],
  "jest": {
    "collectCoverageFrom": [
      "**/src/**/*.ts"
    ],
    "globals": {
      "__DEV__": true
    },
    "moduleDirectories": [
      "node_modules",
      "src",
      "test"
    ],
    "setupFilesAfterEnv": [
      "./test/setup.ts"
    ],
    "snapshotResolver": "./test/resolve-snapshot.js",
    "testEnvironment": "jsdom",
    "testMatch": [
      "<rootDir>/src/**/?(*.)test.ts"
    ],
    "transform": {
      "^.+\\.(t|j)s?$": [
        "@swc-node/jest"
      ]
    }
  },
  "devDependencies": {
    "@babel/node": "^7.15.4",
    "@commitlint/cli": "latest",
    "@commitlint/config-conventional": "latest",
    "@dash-ui/jest": "^2.1.2",
    "@dash-ui/styles": "^0.8.6",
    "@essentials/benchmark": "^1.0.7",
    "@semantic-release/changelog": "^6.0.0",
    "@semantic-release/git": "^10.0.0",
    "@swc-node/core": "^1.6.0",
    "@swc-node/jest": "^1.3.2",
    "@testing-library/jest-dom": "^5.14.1",
    "@types/jest": "latest",
    "cli-confirm": "latest",
    "cz-conventional-changelog": "latest",
    "eslint": "latest",
    "eslint-config-lunde": "latest",
    "husky": "latest",
    "jest": "latest",
    "lint-staged": "latest",
    "lundle": "latest",
    "prettier": "latest",
    "typescript": "latest"
  },
  "release": {
    "branches": [
      "main",
      "next",
      "alpha"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "types",
            "CHANGELOG.md",
            "package.json"
          ],
          "message": "chore(release): ${nextRelease.version}\n\n${nextRelease.notes}"
        }
      ],
      "@semantic-release/github"
    ]
  },
  "dependencies": {
    "@dash-ui/mq": "^0.4.0"
  },
  "peerDependencies": {
    "@dash-ui/styles": ">=0.8.4"
  }
}
